<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Assignment Task App (MVC)</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <h1 class="mb-4">Assignment Task App (MVC)</h1>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title mb-3">Tambah Tugasan Baru</h5>
        <form action="/add" method="POST" id="addTaskForm">
          <div class="mb-3">
            <label for="title" class="form-label">Tajuk Tugasan</label>
            <input type="text" id="title" name="title" class="form-control" placeholder="Masukkan task baru" required>
          </div>
          <div class="mb-3">
            <label for="name" class="form-label">Nama Pekerja</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Nama pegawai" required>
          </div>
          <div class="mb-3">
            <label for="role" class="form-label">Peranan Pekerja</label>
            <input type="text" id="role" name="role" class="form-control" placeholder="Peranan pegawai" required>
          </div>
          <button class="btn btn-primary w-100" type="submit">Tambah</button>
        </form>
      </div>
    </div>
    <ul class="list-group mb-4" id="taskList">
      <% tasks.forEach(task => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span>
            <strong><%= task.title %></strong><br>
            <small>Pegawai: <%= task.name %> | Peranan: <%= task.role %></small>
          </span>
          <div>
            <a href="/edit/<%= task.id %>" class="btn btn-sm btn-warning me-2">Kemaskini</a>
            <form action="/delete/<%= task.id %>" method="POST" style="display:inline">
              <button type="submit" class="btn btn-sm btn-danger">Padam</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 